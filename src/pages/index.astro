---
import { Image } from "astro:assets";
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ToolTip from '../components/Tooltip.astro'
import { SITE_TITLE, SITE_DESCRIPTION, stack } from '../consts';
import nevoBitLogo from '../icons/nevobit.svg'
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.portfolio {
				padding: 0;
				display: flex;
				flex-direction: column;
				align-items: center;
			}
			.portfolio h2 {
				color: var(--secondary);
			}
			.home {
				position: relative;
				height: calc(100vh - 3.6em);
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
			}
			.title {
				display: flex;
				flex-direction: column;
				text-align: center;
				text-wrap: pretty;
			}
			.title h1 {
				color: var(--secondary);
				font-size: 3.5rem;
				height: fit-content;
			}
			.title h2 {
				font-size: 2.5rem;
				color: var(--secondary);
				background: linear-gradient(90deg, #03df41 0%, #0835fc 100%);
				background: linear-gradient(90deg, #28eb59 0%, #1b45ff 100%);
				background-size: 200%;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent; 
				-moz-background-clip: text;
				-moz-text-fill-color: transparent;
				animation: horizontal 5s linear infinite;
			}
			.title p {
				margin-top: 1.5em;
				font-size: 1em;
			}
			.subtitle {
				margin-bottom: 1em;
			}
			.stacks, .experiences {
				text-align: center;
			}
			.experience {
				width: 500px;
				height: 300px;
				border-radius: 20px;
				margin: 0 auto;
			}
			.experience h3 {
				font-size: 0px;
			}
			.stacks ul {
				padding: 0.8em 1em;
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 1.5em;
				list-style: none;
			}
			.stack {
				position: relative;
				width: 3.3em;
				height: 3.3em;
				display: flex;
				justify-content: center;
				align-items: center;
			}
			.stack:hover::before {
				border: 1px solid var(--background-dif);
			}
			.stack::after {
				content: "";
				position: absolute;
				width: 5px;
				height: 5px;
				border-radius: 50%;
				box-shadow:
					0 0 35px 12px var(--background-dif);
				z-index: -2;
			}
			.stack::before {
				content: "";
				position: absolute;
				width: 100%;
				height: 100%;
				border-radius: 1em;
				backdrop-filter: blur(30px);
				z-index: -1;
			}
			.glow {
				position: absolute;
				top: 25em;
				width: 35em;
				height: 35em;
				border-radius: 50%;
				display: block;
				background: linear-gradient(#a043dfaa 0%, #11a0d8aa 100%);
				filter: blur(100px);
				z-index: -1;
			}

			@keyframes horizontal {
				0% { background-position: 0% 50% }
				50% { background-position: 100% 50% }
				100% { background-position: 0% 50% }
			}
			@-o-keyframes horizontal {
				0% { background-position: 0% 50% }
				50% { background-position: 100% 50% }
				100% { background-position: 0% 50% }
			}
			@-moz-keyframes horizontal {
				0% { background-position: 0% 50% }
				50% { background-position: 100% 50% }
				100% { background-position: 0% 50% }
			}
			@-webkit-keyframes horizontal {
				0% { background-position: 0% 50% }
				50% { background-position: 100% 50% }
				100% { background-position: 0% 50% }
			}

			@media (min-width: 574px) {
				.stacks ul {
					padding: 0;
				}
			}
		</style>
	</head>
	<body>
		<span class="glow"/>
		<Header title={SITE_TITLE} />
		<main class="portfolio">
			<section class="home">
				<article class="title">
					<h1>Carlos S. Aldazosa</h1>
					<h2>Software Engineer & Bug Exterminator</h2>

					<p>
						Always learning about new paradigms and technologies to apply right solution in the right place.
					</p>
				</article>
			</section>

			<section class="experiences">
				<h2 class="subtitle">Experience</h2>

				<div class="experience">
					<div class="experience__title">
						<h3>Nevobit</h3>
						<Image src={nevoBitLogo} alt="NevoBit Logo" height={30} />
					</div>
					<span>
						
					</span>
				</div>

			</section>

			<section class="stacks">
				<h2 class="subtitle">Stack</h2>
				<ul>
					{ stack.map(stack => (
						<li class="stack" style={{ '--background-dif': stack.color }} tool-tip>
							<ToolTip>{stack.name}</ToolTip>
							<Image src={stack.icon} alt={`Icon of ${stack.name}`} height={32} />
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
